{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "commonjs",                     
    "outDir": "./dist",                       
    "rootDir": "./email-automation-tool/src", 
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "moduleResolution": "node",               
    "resolveJsonModule": true                 
  },
  "include": [
    "email-automation-tool/src/**/*.ts"  
  ],
  "exclude": [
    "node_modules"  
  ]
}
